<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<TabPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.muzeumfrontendjavafx.controllers.ListazasController">
   <tabs>
      <Tab text="Szobrok">
         <content>
            <VBox alignment="CENTER" spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
               <children>
                  <HBox spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#szoborHozzaadas" prefWidth="100.0" text="Hozzáadás" />
                        <Button mnemonicParsing="false" onMouseClicked="#szoborModositas" prefWidth="100.0" text="Módosítás" />
                        <Button mnemonicParsing="false" onMouseClicked="#szoborTorles" prefWidth="100.0" text="Törlés" />
                     </children>
                  </HBox>
                  <ListView fx:id="listViewSzobrok" prefHeight="200.0" />
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab text="Festmenyek">
         <content>
            <VBox alignment="CENTER" spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <HBox spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#festmenyHozzaadas" prefWidth="100.0" text="Hozzáadás" />
                        <Button mnemonicParsing="false" onMouseClicked="#festmenyModositas" prefWidth="100.0" text="Módosítás" />
                        <Button mnemonicParsing="false" onMouseClicked="#festmenyTorles" prefWidth="100.0" text="Törlés" />
                     </children>
                  </HBox>
                  <ListView fx:id="listViewFestmenyek" prefHeight="200.0" />
               </children>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
